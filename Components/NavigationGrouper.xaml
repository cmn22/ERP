<!--Component to display a group inside the navigation menu bar-->
<!--Renders content to be rendered inside each group along with the group label-->
<UserControl
    x:Class="ERP.Components.NavigationGrouper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ERP.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--Render the component received inside the ContentPresenter tag-->
        <ContentPresenter Content="{x:Bind Content}"/>

        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin="0,5,0,0"
            FontSize="10"
            Text="{x:Bind Label}" 
        />
    </Grid>
</UserControl>
